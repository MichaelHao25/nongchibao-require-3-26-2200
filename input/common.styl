	.mobile-menu
		position fixed
		right 0
		top 0
		bottom 0
		width 260px
		height 100vh
		background #2e3233
		overflow hidden
		transform translateX(100%)
		transition 0.3s
		.target
			position relative
			display block
			height 50px
			padding 0 20px
			font-size 16px
			color #fff
			line-height 50px
			border-bottom 1px solid #3a3f40
			transition 0.3s
			&.back
				padding-left 40px
		.child-menu
			position fixed
			right 0
			width 260px
			top 0
			bottom 0
			transform translateX(100%)
			transition 0.3s
			z-index 1
		&>.child-menu
			transform translate(0, 0)
		.item
			overflow hidden
		.moveoin
			transform translateX(0)
		.moveout
			&>.item
				&>.target
					transform translateX(-100%)
		.children-menu::before, .children-menu::after, .back::before, .back::after
			content: '';
			position: absolute;
			top: 50%;
			margin-top: -1px;
			display: inline-block;
			height: 2px;
			width: 10px;
			background: #464c4e;
			-webkit-backface-visibility: hidden;
			backface-visibility: hidden;
		.children-menu::before, .back::before
			-webkit-transform: rotate(45deg);
			-moz-transform: rotate(45deg);
			-ms-transform: rotate(45deg);
			-o-transform: rotate(45deg);
			transform: rotate(45deg);
		.children-menu::after, .back::after
			-webkit-transform: rotate(-45deg);
			-moz-transform: rotate(-45deg);
			-ms-transform: rotate(-45deg);
			-o-transform: rotate(-45deg);
			transform: rotate(-45deg);

		.children-menu::before, .children-menu::after
			right: 20px;
			-webkit-transform-origin: 9px 50%;
			-moz-transform-origin: 9px 50%;
			-ms-transform-origin: 9px 50%;
			-o-transform-origin: 9px 50%;
			transform-origin: 9px 50%;
		.back::before, .back::after
			left: 20px;
			-webkit-transform-origin: 1px 50%;
			-moz-transform-origin: 1px 50%;
			-ms-transform-origin: 1px 50%;
			-o-transform-origin: 1px 50%;
			transform-origin: 1px 50%;
