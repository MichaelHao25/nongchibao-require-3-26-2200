			display -o-flex
			display flex
		&.active
			span
				background-color rgba(0,0,0,0)
				&:after
				&:before
					transition top 0.3s, bottom 0.3s,transform 0.3s 0.3s	
				&:after
					bottom 0
					transform rotate(45deg)
				&:before
					top 0
					transform rotate(-45deg)
		span
			position relative
			width 26px
			height 2px
			background public-color
			transition 0.3s background
			&:after
			&:before
				content ""
				position absolute
				top -10px
				left 0
				right 0
				height 2px
				width 100%
				background public-color
				transition top 0.3s 0.3s, bottom 0.3s 0.3s,transform 0.3s
			&:after
				top auto
				bottom -10px

@keyframes menu_drop_down_second
	0%
		transform translate(-50%,-20px)
		opacity 0
	100%
		transform translate(-50%,0)
		opacity 1	
@keyframes menu_drop_down_third
	0%
		transform translate(0,-20px)
		opacity 0
	100%
		transform translate(0,0)
		opacity 1
@keyframes menu_drop_down_second_fadeIn
	0%
		opacity 0
		transform translateY(-10px)
	100%
		opacity 1
		transform translateY(0)



